<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper
	namespace="com.demo.tenco.model.dao.UserDAO">
	<!-- insert test -->
	<insert id="insert" 
	parameterType="com.demo.tenco.model.dto.User">
		INSERT INTO
		user(username, password, email, 
			profile, role, createDate) 
		VALUES(#{username}, #{password}, #{email},
			 #{profile}, #{role}, #{createDate});   
	</insert>
	<!-- select test -->
	<select id="findAll"
		resultType="com.demo.tenco.model.dto.User">
		select * from user
	</select>
	
	<!-- update test  -->
	<update  id ="update" parameterType= "com.demo.tenco.model.dto.User">
		UPDATE user
		SET password = #{password}, 
			email = #{email}, 
		    profile = #{profile}, 
		    role = #{role}
		WHERE id = #{id};   
	</update >
	
	<!-- delete test  -->
	<delete id="delete" 
		parameterType= "Integer">
		DELETE 
		FROM user 
		WHERE id = #{id};
	</delete>
	
</mapper>
  
  